@page
@using GTRChitra.Areas.Identity.Pages.Account;
@model CheckEmailModel
@{
    ViewData["Title"] = "Verify Identity";
}


<div class="container-fluid text-center">

    <br />
    <br />
    <br />

    <h2>@ViewData["Title"]</h2>

    <br />

    <p>
        Please check your email inbox and phone sms for an OTP code
    </p>

    <br />

    <center>

        <div class="col-md-4">
            <form asp-page-handler="CheckOTP" method="post">
                <input asp-for="OtpModel.Email" id="email" value="@ViewData["Email"]" hidden />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="OtpModel.OTPToken" class="form-control-lg" autocomplete="off" required />
                    <span asp-validation-for="OtpModel.OTPToken" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Submit</button>
                </div>
            </form>
            <br />
            <div>
                <a href="#" id="reset-link">Did'nt received an OTP? Send Again</a>
            </div>
        </div>

    </center>

    <br />
    <br />
    <br />
    <br />
    <br />
    <br />

    <script src="~/Content/ProjectLibFile/js/jquery/jquery.min.js"></script>
    <script>
        $("#reset-link").click(function () {
            let email = $("#email").val();

            location.href = `/Identity/Account/CheckEmail?email=${email}&resendOTP=true`;

            //$.ajax({
