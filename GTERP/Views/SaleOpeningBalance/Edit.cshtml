@model GTERP.Models.OpeningBalance.SalesOpening

<style>


    #styletext {
        color: transparent;
        background: #666666;
        -webkit-background-clip: text;
        -moz-background-clip: text;
        background-clip: text;
        text-shadow: 0px 3px 3px rgba(255,255,255,0.5);
        font-weight: 100;
        font-size: 40px;
    }
</style>


@using (Html.BeginForm("Edit", "SaleOpeningBalance", FormMethod.Post))
{
    @*@Html.AntiForgeryToken()*@

    <div class="container" style="max-width: 700px;">
        <div class="py-7 text-center">

            <h1 id="styletext">Sales Opening Entry</h1>
            <p class="lead"></p>
        </div>

        @if (Model != null)
        {
            @Html.HiddenFor(x=> x.OpeningBalanceId)
        }
        else
        {
            <input type="hidden" asp-for="OpeningBalanceId" />
        }
        <div id="modalbodyfahad" class="row card p-4">
            <div class="col-md-12 order-md-1">
                <h4 class="mb-3">Sales Opening @ViewBag.Title</h4>

                <form class="needs-validation card p-4" novalidate>


                    <div class="container">
                        <div class="row">
                            <div class="col-md-12 col-12">
                                <div class="input-group mb-2">
                                    <input type="text" id="DtInput" class="form-control" name="DtInput" value="@Model.DtInput" hidden/>
                                </div>
                            </div>
                            <input type="text" id="ComId" class="form-control" name="ComId" value="@Model.ComId" hidden />
                            <input type="text" id="UserId" class="form-control" name="UserId" value="@Model.UserId " hidden />

                            <div class="col-md-12 col-12">
                                <div class="input-group mb-2">
                            <label class="control-label">Year</label>
                            <select asp-for="FiscalYearId" class="form-control" asp-items="ViewBag.FiscalYearId"></select>
                            <span asp-validation-for="FiscalYearId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-12 col-12">
                                <div class="input-group mb-2">
                                <label class="control-label">Month</label>
                                <select asp-for="FiscalMonthId" class="form-control" asp-items="ViewBag.FiscalMonthId"></select>
                                <span asp-validation-for="FiscalMonthId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-12 col-12">
                                <div class="input-group mb-2">
                                <label class="control-label">Buffer</label>
                                <select asp-for="BufferID" class="form-control" asp-items="ViewBag.BufferId"></select>
                                <span asp-validation-for="BufferID" class="text-danger"></span>  
                                </div>
                            </div>
                            <div class="input-group mb-12 col-md-12 col-12 mt-2">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1">Recive By Opening</span>
                                </div>
                                 <input type="text" id="ReciveByOpening" class="form-control" name="ReciveByOpening" value="@Model.ReciveByOpening" />
                            </div>
                            <div class="input-group mb-12 col-md-12 col-12 mt-2">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1">SalesByOpening</span>
                                </div>
                                 <input type="text" id="SalesByOpening" class="form-control" name="SalesByOpening" value="@Model.SalesByOpening"/>
                            </div>

                            <div class="input-group mb-12 col-md-12 col-12 mt-2">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1">BacklogOpening</span>
                                </div>
                                 <input type="text" id="BacklogOpening" class="form-control" name="BacklogOpening"value="@Model.BacklogOpening" />
                            </div>






                        </div>





                        <div class="row text-center m-2">
                            <br />
                            <div class="col-md-2"></div>
                            <div class="col-md-4 col-xs-12 d-block mx-auto">

                                @if (ViewBag.Title == "Create")
                                {
                                    <input type="submit" value="Save" class="btn btn-primary btn-md btn-block rounded-0" />

                                    @*<button class="btn btn-primary btn-lg btn-block" type="button" onclick="Products_save()">Save</button>*@
                                }
                                else if (ViewBag.Title == "Edit")
                                {

                                    <input type="submit" value="Update" class="btn btn-warning btn-block rounded-0" />

                                    @*<button class="btn btn-warning btn-lg btn-block" type="button" onclick="Products_save()">Update</button>*@
                                }
                                else if (ViewBag.Title == "Delete")
                                {
                                    <button class="btn btn-danger btn-md btn-block rounded-0" type="button" onclick="Buffer_delete()">Delete</button>
                                }


                            </div>
                            <div class="col-md-4 col-xs-12 d-block mx-auto">
                                @Html.ActionLink("Back", "Index", "SaleOpeningBalance", null, new { @class = "btn btn-info btn-block rounded-0", @id = "btnBack" })

                            </div>
                            <div class="col-md-2"></div>

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

}

