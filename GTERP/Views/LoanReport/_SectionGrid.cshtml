<div class="table-responsive">
    <table id="commonTable" class="commonTable table table-hover table-striped trow mb-0 text-center">
        <thead>
            <tr>
                <th class="d-none">Section Id</th>
                <th>Section Name</th>
            </tr>
        </thead>
    </table>
</div>

<div class="mCustomScrollbar table-responsive" data-mcs-theme="minimal-dark" style="height: 220px;">
    <table id="sectionTable" class="sectionTable table table-hover table-light trow text-center">

        <thead class="d-none">
            <tr>
                <th>Section Id</th>
                <th>Section Name</th>
            </tr>
        </thead>

        <tbody>

            <tr id="myrow">

                <td class="d-none">
                    0
                </td>

                <td>
                    =ALL=
                </td>

            </tr>

            @if (sections.Count > 0)
            {
                foreach (Cat_Section aSection in sections)
                {
                    <tr id="myrow">

                        <td class="d-none">
                            @aSection.SectId
                        </td>

                        <td>
                            @aSection.SectName
                        </td>

                    </tr>
                }
            }
        </tbody>

    </table>
</div>

@*<script src="~/Content/js/plugins/jquery/jquery-3.1.1.min.js"></script>*@
@section Scripts{
    <script>

        $(document).ready(function () {

            $(".sectionSearch").keyup(function () {

                var searchText = $(this).val();

                searchText = searchText.toLowerCase();


                var i = 0;

                $('#sectionTable tbody tr').each(function () {

                    var sectionId = $.trim($(this).children("td:eq(0)").html());
                    var sectionName = $.trim($(this).children("td:eq(1)").html());


                    if (sectionId.toLowerCase().indexOf(searchText) === -1 &&
                        sectionName.toLowerCase().indexOf(searchText) === -1) {
                        $(this).css("display", "none");
                    } else {
                        $(this).css("display", "");
                    }
                });
            });

        });

    </script>
    }